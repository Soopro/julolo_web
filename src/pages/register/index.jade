div

  include ../../common/navbar/navbar_index

  include ../../common/banner/banner_index

  // register
  .container.register
    h1.text-center Create new account
    .row
      .col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
        form.form-horizontal(role="form")
          .form-group
            .col-md-2.col-sm-2.col-xs-2
              i.fa.fa-envelope.fa-stack-2x
            .col-md-9.col-sm-9.col-xs-9
              input.form-control.input-lg(type="email", placeholder="Email")
          .form-group
            .col-md-2.col-sm-2.col-xs-2
              i.fa.fa-chain.fa-stack-2x
            .col-md-9.col-sm-9.col-xs-9
              input.form-control.input-lg(type="invitecode", placeholder="Invite code")
              p.help-block
                | Use invite code to complete the registration,invite code is generated by other users
          .form-group.login_btn
            button.btn.btn-default(type="submit") Register
    .dog
      img(src="../../img/dog1.png")
    .dog
      img(src="../../img/dog.png")

  // ac_login
  .container.login
    .signin
      p Already have an account?
      a(href="../../pages/login/index.html")
        b Sign in
