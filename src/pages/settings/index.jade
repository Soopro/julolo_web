extends ../../base

block content

  include ../../common/navbar/navbar_content

  include ../../common/banner/banner_content

  // settings
  .container
    .row
      .settings
        h2 Supmice Tech co.,Ltd.
        // nav
        include ../../common/nav-tabs/nav-tabs

        .row
          .col-md-6.col-sm-8.col-xs-12
            .col-md-10
              form(role="form")
                .form-group
                  label(for="name") Name
                  input#name.form-control(type="name")
                .form-group
                  label(for="description") Description
                  textarea#description.form-control(rows="3", placeholder="Contact information here")
                .form-group
                  label(for="contactinformation") Contact information
                  textarea#contactinformation.form-control(placeholder="Contact information here")
                .form-group
                  label(for="file") Map
                  input#file.form-control(type="file", placeholder="Upload Map")
                  p.help-block.small Map upload must be .jpg only.less than 500k.
          .col-md-6.col-sm-8.col-xs-12
            .col-md-10
              form(role="form")
                .form-group
                  label(for="minisiteurl") Recruitment Minisite URL
                  input#minisiteurl.form-control(type="url")
                  p.help-block.small
                    | Lorem ipsum dotor sit amet,consectetur adipiscing elit,sed do eiusmod
                    | tempor incididunt ut labore et dolore magna aliqua.
                    | modo consequat.
                  a.btn.btn-default(href="#") Bind
                  a.btn.btn-default.makebtn(href="#") Make
                .form-group
                  label(for="wechat") WeChat Token
                  input#wechat.form-control(type="text")
                  label(for="wechaturl") WeChat interface URL
                  input#wechaturl.form-control(type="text")
                  a.btn.btn-default(href="#") Bind
                  a.btn.btn-default.makebtn(href="#") Make
        // #nav
        a.btn.btn-default(href="#", type="submit") Save
  // #settings
